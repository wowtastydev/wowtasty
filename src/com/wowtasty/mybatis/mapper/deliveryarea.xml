<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="deliveryarea">

	<sql id="columns"> 
		DeliveryCompanyID,PostalPrefix,Seq,MinPrice,DeliveryFee
	</sql>
	
	<!--selectAll-->
	<select id="selectAll" resultType="deliveryareavo">
	SELECT 
	<include refid="columns"/>
	FROM delivery_area 
	</select>
	
	<!--selectByID-->
	<select id="selectByID" parameterType="String" resultType="deliveryareavo">
	SELECT 
	<include refid="columns"/>
	FROM delivery_area
	WHERE DeliveryCompanyID = #{id} 
	</select>
	
	<!--Insert-->
	<insert id = "insert" parameterType="deliveryareavo">
	INSERT INTO delivery_area
	( 	
		<include refid="columns"/>
		)
	VALUES
	(	#{deliveryCompanyID},
		UPPER(TRIM(#{postalPrefix})),
		#{seq},
		TRIM(#{minPrice}),
		TRIM(#{deliveryFee}))
	</insert>
	
	<!--Delete-->
	<delete id = "delete" parameterType="deliveryareavo">
		DELETE FROM delivery_area
		WHERE DeliveryCompanyID = #{deliveryCompanyID} 
	</delete>

</mapper>