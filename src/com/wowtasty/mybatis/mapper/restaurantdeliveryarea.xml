<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="restaurantdeliveryarea">

	<sql id="columns"> 
		RestaurantID,PostalPrefix,Seq,DeliveryCompanyID,DeliveryCompanyType,MinPrice,DeliveryFee
	</sql>
	
	<!--selectByID-->
	<select id="selectByID" parameterType="String" resultType="restaurantdeliveryareavo">
	SELECT 
	<include refid="columns"/>
	FROM restaurant_delivery_area
	WHERE RestaurantID = #{id} 
	Order by PostalPrefix, DeliveryCompanyID
	</select>
	
	<!--Insert-->
	<insert id = "insert" parameterType="restaurantdeliveryareavo">
	INSERT INTO restaurant_delivery_area
	( 	
		<include refid="columns"/>
		)
	VALUES
	(	#{restaurantID},
		UPPER(TRIM(#{postalPrefix})),
		#{seq},
		#{deliveryCompanyID},
		#{deliveryCompanyType},
		#{minPrice},
		#{deliveryFee})
	</insert>
	
	<!--Delete-->
	<delete id = "delete" parameterType="String">
		DELETE FROM restaurant_delivery_area
		WHERE RestaurantID = #{id} 
	</delete>
	
	<!--delete By DeliveryCompnayID-->
	<delete id = "deleteByDeliveryID" parameterType="String">
		DELETE FROM restaurant_delivery_area
		WHERE DeliveryCompanyID = #{id} 
	</delete>
</mapper>